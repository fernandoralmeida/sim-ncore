@page
@model Sim.UI.Web.Areas.Settings.Pages.Common.Unidade.Manage.IndexModel
@{
    ViewData["Title"] = "Manager";
    ViewData["ActivePageSettings"] = SettingsNavPages.Unidade;
    ViewData["ActivePage"] = Sim.UI.Web.Pages.Shared.LayoutNavPages.Configuracoes;
    ViewData["ActivePageLi"] = Sim.UI.Web.Pages.Shared.LayoutNavPages.ConfigSistema;
}

<partial name="_StatusMessage" model="Model.StatusMessage" />

<div class="row">
    <form method="post">
        <div class="card">
            <div class="card-header">Alterar informa√ßoes sobre a Unidade</div>
            <div class="row">
                <div class="col s12" hidden>
                    <input asp-for="Input.Id"/>
                    <input asp-for="Organizacao.Id"/>
                </div>                  
                <div class="input-field col s12 m12 l12">
                    <input asp-for="Organizacao.Nome" />
