                };  
                var chart = new google.visualization.PieChart(document.getElementById('chart_inclusaoAc'));  
                chart.draw(data, options);
            });   
            $.getJSON(`/SimBI/Empregos/?ano=${y}&handler=EmpregosAtivosByGeneroAc`, (data) => {
