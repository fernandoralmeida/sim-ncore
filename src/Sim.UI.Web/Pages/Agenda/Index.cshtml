@page
@model Sim.UI.Web.Pages.Agenda.IndexModel
@{
    ViewData["Title"] = "Eventos";    
}

<partial name="_StatusMessage" model="Model.StatusMessage" />

<form method="post">
    <nav class="row white">
        <div class="nav-wrapper">            
            <div class="input-field col s6 m6 l6">
                <input id="search" placeholder="Digite aqui para pesquisar!" onkeypress="handle(event)" asp-for="Input.Evento"  type="search" required>
                <label class="label-icon" for="search"><i class="material-icons">search</i></label>
            </div>            
            <ul class="right">
                <li><a asp-page="/Agenda/Eventos/Index" title="Incluir Novo Evento"><i class="material-icons">add</i></a></li>
                <li class="@AgendaNavPages.EventoAtivoClass(ViewContext)"><a asp-route-m="avl" class="green-text"><i class="material-icons">event_available</i></a> </li>
                <li class="@AgendaNavPages.EventoFinalizadoClass(ViewContext)"><a asp-route-m="fzd"><i class="material-icons">event</i></a></li>
                <li class="@AgendaNavPages.EventoCanceladoClass(ViewContext)"><a asp-route-m="cld" class="red-text"><i class="material-icons">event_busy</i></a></li>
            </ul>            
        </div>
    </nav>
</form>

<partial name="_AgendaList" model="Model.Input.ListaEventosMes" />

@section scripts
{
    <script src="~/js/jquery.mask.min.js"></script>
    <script type="text/javascript">
        $('#inputCPF').mask('000.000.000-00');        
    </script>
}
