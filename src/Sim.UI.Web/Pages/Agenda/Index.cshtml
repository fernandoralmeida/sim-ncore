@page
@model Sim.UI.Web.Pages.Agenda.IndexModel
@{
    ViewData["Title"] = "Eventos";    
}

<partial name="_StatusMessage" model="Model.StatusMessage" />

<div class="white z-depth-1 rounded-default">
    <form method="post">
    <div class="row mgn-b-0">
        <div class="input-field col s2 m2 l2">
            <input asp-for="Input.Ano" />
            <label asp-for="Input.Ano"></label>
        </div>
        <div class="input-field col s2 m2 l2">
            <select asp-for="Input.Owner" asp-items="Model.Setores"></select>
            <label asp-for="Input.Owner"></label>
        </div>
        <div class="input-field col s2 m2 l2">
            <select asp-for="Input.Tipo" asp-items="Model.Tipos"></select>
            <label asp-for="Input.Tipo"></label>
        </div>
        <div class="input-field col s6 m6 l6 valign-wrapper">
            <input asp-for="Input.Evento"/>
            <label asp-for="Input.Evento"></label>
            <button class="btn waves-effect waves-light" asp-page-handler="Event" title="Consultar"><i class="material-icons">search</i></button>
            <span class="grey-text lighten-2"> | </span>
            <a asp-page="/Agenda/Inscricoes/Consulta/Index" class="btn waves-light waves-effect" title="Consultar Participante"><i class="material-icons">event person_search</i></a>
            <span class="grey-text lighten-2"> | </span>
            <a asp-page="/Agenda/Eventos/Index" class="btn blue waves-light waves-effect" title="Incluir Novo Evento"><i class="material-icons">event add</i></a>
        </div> 
    </div>
    <nav class="nav-extended white z-depth-0">
        <div class="nav-content">
            <ul class="tabs">
                <li class="tab right @AgendaNavPages.EventoAtivoClass(ViewContext)"><button asp-page-handler="Available" class="btn-flat red-text"><i class="material-icons">event_busy</i></button></li>
                <li class="tab right @AgendaNavPages.EventoFinalizadoClass(ViewContext)"><button asp-page-handler="Finalized" class="btn-flat orange-text"><i class="material-icons">event</i></button></li>
                <li class="tab right @AgendaNavPages.EventoCanceladoClass(ViewContext)"><button asp-page-handler="Canceled" class="btn-flat green-text"><i class="material-icons">event_available</i></button></li>                
            </ul>
        </div>
    </nav>
    </form>
</div>

<partial name="_AgendaList" model="Model.Input.ListaEventosMes" />

@section scripts
{
    <script src="~/js/jquery.mask.min.js"></script>
    <script type="text/javascript">
        $('#inputCPF').mask('000.000.000-00');        
    </script>
}
