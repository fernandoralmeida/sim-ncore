@page
@using System.Globalization
@model Sim.UI.Web.Pages.BancoPovo.Inadimplentes.IndexModel
@{
    ViewData["Title"] = "Banco do Povo";
    ViewData["ActivePageBPP"] = Web.Pages.BancoPovo.NavPage.Inadimplentes;
}
<partial name="_NavPage" />
<div class="card">
    <div class="card-header grey-text">Meus Contratos Inadimplentes<i class="material-icons left">text_snippet</i></div>
        @if(Model.MeusContratos != null) {
            <table>
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Processo</th>
                        <th>Cliente</th>
                        <th>Data</th>
                        <th>Situação</th>
                        <th>Pagamento</th>
                        <th>Valor</th>
                        <th>...</th>
                    </tr>
                </thead>
                <tbody>     
                    @{ var _cont = 0; }
                    @foreach (var c in Model.MeusContratos) {
                        _cont++;
                        <tr>
                            <td>@_cont</td>
                            <td>@Html.DisplayFor(model => c.Numero)</td>
                            <td>
                                @{ 
                                    var _isempresa = c.Empresa != null ? c.Empresa.Nome_Empresarial : c.Cliente.Nome;
                                }
                                @Html.DisplayFor(modelc => _isempresa)
                            </td>
                            <td>@Html.DisplayFor(model => c.Data) ~ @Html.DisplayFor(model => c.DataSituacao)</td>
                            <td>
                                @{ var _situacao = c.Situacao.ToString();}                                
                                <a class="btn-small waves-effect waves-light blue modal-trigger showmodal" data-id="@c.Id" data-stc="@c.Situacao" data-pgt="@c.Pagamento" href="#modal1">@Html.DisplayFor(model => _situacao)</a>
                            </td>
                            <td>
                                @{ var _pag = c.Pagamento.ToString();}                                
                                <a class="btn-small waves-effect waves-light red modal-trigger showmodal" data-id="@c.Id" data-stc="@c.Situacao" data-pgt="@c.Pagamento" href="#modal1">@Html.DisplayFor(model => _pag)</a>
                            </td>
                            <td>@NumberFormatInfo.CurrentInfo.CurrencySymbol @Html.DisplayFor(model => c.Valor)</td>
                            <td><a class="btn-small waves-effect waves-light cyan modal-trigger showmodal" data-id="@c.Id" data-cli="@_isempresa" data-valor="@c.Valor" href="#modalR" title="Renegociar?"><i class="material-icons">currency_exchange</i></a></td>
                        </tr>                        
                    }       
                </tbody>
            </table>
        }
    <div class="card-action">
        Lista de contratos inadimplentes
        <span class="red-text right">@NumberFormatInfo.CurrentInfo.CurrencySymbol @Model.TotalCredito</span>
    </div>
</div>

<!-- Modal Structure -->
<div id="modal1" class="modal">
    <div class="modal-content">
        <form method="post">
            <div class="card-header">Atualizar Informações</div>
            <div class="col s12" hidden>
                <input id="idservico" asp-for="GetID"/>
            </div>
            <div class="row">
                <div class="col s4 m4 l4">
                    <select id="idsituacao" class="browser-default" asp-for="GetSituacao" asp-items="Model.ESituacoes"></select>
                </div>
                <div class="col s8 m8 l8 valign-wrapper">
                    <select id="idpagamento" class="browser-default" asp-for="GetPagamento" asp-items="Model.EPagamentos"></select>        
                    <button class="btn lighten-1 waves-effect waves-light mgn-l-10" type="submit" asp-page-handler="GoSituacao"><i class="material-icons">check_circle</i></button>              
                </div>
            </div>
        </form>
    </div>
</div>

<div id="modalR" class="modal">
    <div class="modal-content">
        <div class="card-header">Renegociar Débitos</div>
        <div class="col s12" hidden>
            <input id="idservico" asp-for="GetID"/>
        </div>
        <div class="row">
            <div class="col s4 m4 l4">
                <input id="idcliente" disabled/>
            </div>
            <div class="col s8 m8 l8 valign-wrapper">
                @NumberFormatInfo.CurrentInfo.CurrencySymbol
                <input id="idvalor" disabled/>        
                <a id="idrenegociar" class="btn lighten-1 waves-effect waves-light mgn-l-10" ><i class="material-icons">check_circle</i></a>              
            </div>
        </div>        
    </div>
</div>

@section scripts{
    <script>
        $(function () {
            $('.showmodal').click(function () {
                var _id = $(this).data('id'); 
                var _c = $(this).data('cli');    
                var _v = $(this).data('valor');   
                document.getElementById('idservico').value = _id;      
                document.getElementById('idcliente').value = _c;            
                document.getElementById('idvalor').value = _v;        
                var a = document.getElementById('idrenegociar');
                a.href = `/Banco-do-Povo/Inadimplentes?id=${_id}&handler=GoRenegociar`;
            });
            $("#updateservico").click(function () {
                var _id = document.getElementById('idservico').value;
                var _dom = document.getElementById('dominioid').value;  
                var _nom = document.getElementById('inputmodalnome').value;                 
                $.get(`/Settings/Common/Servicos?id=${_id}&dominio=${_dom}&nome=${_nom}&handler=Manager`);
            });
        });
    </script>
}