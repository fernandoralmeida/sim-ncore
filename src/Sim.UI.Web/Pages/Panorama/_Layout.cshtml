    {
        Layout = (string)parentLayout;
    }
    else
    {
        Layout = "/Pages/Shared/__LayoutModal.cshtml";
    }

}

<div class="container-m20">
    @RenderBody()
</div>

@section Scripts {
    @RenderSection("Scripts", required: false)
}